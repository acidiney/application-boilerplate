{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "incremental": true,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@domain/*": ["./src/domain/*"],
      "@controllers/*": ["./src/presentation/controllers/*"],
      "@interacts/*": ["./src/interacts/*"],
      "@infra/*": ["./src/infra/*"]
    }
  },
}
